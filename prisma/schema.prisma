generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StockItem {
  id           String   @id @default(cuid())
  location     String
  name         String
  serialNumber String
  quantity     Int
  projectName  String
  projectNumber String
  deliveryTime DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  image        String?
  
  // Relations
  historyEntries StockHistory[]
  
  @@map("stock_items")
}

model StockHistory {
  id           String   @id @default(cuid())
  stockItemId  String
  action       String   // CREATE, UPDATE, DELETE, QUANTITY_CHANGE
  oldValues    String?  // JSON string of old values
  newValues    String?  // JSON string of new values
  quantityChange Int?   // +100, -50, etc.
  reason       String?  // Optional reason for the change
  createdAt    DateTime @default(now())
  
  // Relations
  stockItem    StockItem @relation(fields: [stockItemId], references: [id], onDelete: Cascade)
  
  @@map("stock_history")
}
